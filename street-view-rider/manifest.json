{
  "manifest_version": 3,
  "name": "Street View Rider",
  "description": "Drive a 3D car inside Google Maps Street View without incurring extra API billing.",
  "version": "1.0.0",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.google.com/maps/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "assets/icons/icon48.png",
    "default_title": "Street View Rider",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.google.com/maps/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
